# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# IMPORTANT: Copy this file to .env.production and fill in your values
# DO NOT commit .env.production to git!

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=dashboard_production

# Backend Database Config (Should match above)
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_secure_password_here
DATABASE_NAME=dashboard_production

# ============================================
# Backend App Configuration
# ============================================
PORT=4000
NODE_ENV=production

# CRITICAL: Generate secure secrets!
# Use: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING
JWT_REFRESH_SECRET=CHANGE_THIS_TO_DIFFERENT_SECURE_RANDOM_STRING

# ============================================
# Frontend Configuration
# ============================================
# Replace with your actual domain
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# ============================================
# Storage Configuration
# ============================================
STORAGE_TYPE=local
UPLOAD_MAX_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp,gif

# ============================================
# Optional: Email Configuration (for future features)
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
