# Database Configuration
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DB=dashboard_db

# Backend Database Config (Should match above)
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=admin
DATABASE_PASSWORD=admin
DATABASE_NAME=dashboard_db

# Backend App Configuration
PORT=4000
JWT_SECRET=supersecretkey
JWT_REFRESH_SECRET=supersecretrefreshkey
NODE_ENV=development

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:4000

# Frontend URLs (for CORS - accepts multiple origins separated by comma)
FRONTEND_URL=http://localhost:3000,http://localhost:3001

# Specific frontend URLs (for email links and redirects)
FRONTEND_DASHBOARD_URL=http://localhost:3000  # Admin dashboard with authentication
FRONTEND_PUBLIC_URL=http://localhost:3001     # Public landing page
NEXT_PUBLIC_DASHBOARD_URL=http://localhost:3000

# Frontend Branding (optional - fallback to app settings)
NEXT_PUBLIC_APP_NAME=Your Company Name
NEXT_PUBLIC_OWNER_NAME=Your Name
NEXT_PUBLIC_OWNER_INITIALS=YN
NEXT_PUBLIC_OWNER_TITLE=Your Title

# Storage Configuration
STORAGE_TYPE=local
UPLOAD_MAX_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp,gif

# Body Parser Configuration
BODY_PARSER_LIMIT=10mb  # Maximum size for JSON/URL-encoded payloads

# Seed Users Configuration
SEED_ADMIN_PASSWORD=admin123
SEED_CLIENT_PASSWORD=client123
SEED_TEAM_PASSWORD=team123

# Security
BCRYPT_SALT_ROUNDS=10

# Mail Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@example.com
MAIL_PASSWORD=your-app-password
MAIL_FROM="Your Name <your-email@example.com>"

# Future S3 Configuration (uncomment when migrating to S3)
# AWS_REGION=us-east-1
# AWS_BUCKET=your-bucket-name
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
